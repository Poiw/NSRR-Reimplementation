{
    "name": "NSRR",
    "n_gpu": 2,

    "arch": {
        "type": "NSRR",
        "args": {
            "upsample_scale": 2
        }
    },
    "data_loader": {
        "type": "NSRRDataLoader",
        "args":{
            "data_dir": "data/",
            "batch_size": 8,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 4,
            "img_dirname": "img/",
            "depth_dirname": "depth/",
            "flow_dirname": "flow/",
            "downsample": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nsrr_loss",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
