{
    "name": "NSRR",
    "n_gpu": 1,

    "arch": {
        "type": "NSRR",
        "args": {
            "upsample_scale": 2
        }
    },
    "data_loader": {
        "type": "NSRRDataLoader",
        "args":{
            "data_dir_list": ["F:\\NSR\\Bunker\\Seq1"],
            "cropped_size": [256, 256],
            "batch_size": 1,
            "shuffle": true,
            "validation_split": 0.02,
            "num_workers": 4
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nsrr_loss",
    "metrics": [
        "psnr","ssim"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 35,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
